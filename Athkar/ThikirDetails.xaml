<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Athkar.ThikirDetails"
             Title="ThikirDetails"
             FlowDirection="RightToLeft">
    <Grid Padding="20" Margin="10" RowDefinitions="Auto,Auto,*">
   
        <Image Grid.Row="0" HeightRequest="100" WidthRequest="100" x:Name="imgThikir"/>
        <Label Grid.Row="1" FontSize="Large" x:Name="lbSubject"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Grid.Row="2" FontSize="Large" x:Name="lbContent"/>
    </Grid>
</ContentPage>